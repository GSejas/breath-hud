{
  "name": "breathing-hud",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "author": "Breathing Shapes Team",
  "description": "Desktop breathing meditation HUD overlay application",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main/main.js",
    "dev": "npm run build && electron dist/main/main.js",
    "dev:enhanced": "npm run build && cross-env ENHANCED_MODE=true electron dist/main/main.js",
    "dev:watch": "tsc --watch",
    "clean": "rimraf dist",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^26.6.10"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "electron-builder": "^24.0.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.breathingshapes.hud",
    "productName": "Breathing HUD",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "breathing",
    "meditation",
    "mindfulness",
    "hud",
    "overlay",
    "desktop"
  ]
}
